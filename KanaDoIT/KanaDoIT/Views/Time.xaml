<navigation:Page x:Class="Arbaureal.KanaDoIT.Views.Time" 
           xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
           xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
           xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
           xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
           xmlns:AnalogClock="clr-namespace:Arbaureal.KanaDoIT.Clock.ClockObjects.ClockView;assembly=Clock"
           mc:Ignorable="d"
           xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
           d:DesignWidth="640" d:DesignHeight="480"
           Title="Time Page">
    <Grid x:Name="LayoutRoot">
        <Grid.RowDefinitions>
            <RowDefinition Height="260"></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>

        <AnalogClock:Clock x:Name="AnalogClockControl" Height="250" Width="250" VerticalAlignment="Top" Grid.Row="0"/>
        <Button x:Name="btnNewTime" Width="100" Height="20" Content="Set new time" Grid.Row="1" VerticalAlignment="Top" Click="btnNewTime_Click" />
    </Grid>
</navigation:Page>
