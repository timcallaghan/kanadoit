<views:KatakanaBaseView x:Class="Arbaureal.KanaDoIT.Views.Katakana.ReadnListen" 
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:views="clr-namespace:Arbaureal.KanaDoIT.Views.Katakana"
    xmlns:navigation="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation"
    mc:Ignorable="d" d:DesignWidth="640" d:DesignHeight="480"
    Title="Katakana"
    Style="{StaticResource PageStyle}">

    <Grid x:Name="LayoutRoot">
        <ScrollViewer x:Name="PageScrollViewer" Style="{StaticResource PageScrollViewerStyle}">

            <StackPanel x:Name="ContentStackPanel" HorizontalAlignment="Center">

                <TextBlock x:Name="kanaPlaceholder" HorizontalAlignment="Center"/>
                <TextBlock x:Name="romajiPlaceholder" FontSize="50" HorizontalAlignment="Center"/>
                <MediaElement x:Name="SoundPlayer" AutoPlay="True" />

                <Button x:Name="btnCycle" Click="btnCycle_Click" Content="Next" Width="222"></Button>
                <Button x:Name="btnReplay" Click="btnReplay_Click"  Content="Replay" Width="222"></Button>

            </StackPanel>

        </ScrollViewer>
    </Grid>
</views:KatakanaBaseView>
